package day2programs;
public class MinElePosition {
    public static void main(String[] args) {
        int[] arr = {5, 10, 2, 8, 1};
        
        int min = arr[0];
        int minIndex = 0;

        for (int i = 1; i < arr.length; i++) {
            if (arr[i] < min) {
                min = arr[i];
                minIndex = i;
            }
        }

        System.out.println("Minimum element is at index: " + minIndex);
    }
}
